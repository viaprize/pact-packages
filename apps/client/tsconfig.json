{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "strict": true,
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/config": ["config/index.ts"],
      "@/context/*": ["context/*"],
      "@/lib/*": ["lib/*"],
      "@/contract/*": ["contract/*"],
      "@env": ["env.mjs"],
      "@/backend/*": ["../backend/dist/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "global.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "env.mjs",
    "*.mjs",
    "../backend/*"
  ],
  "exclude": ["node_modules"]
}
