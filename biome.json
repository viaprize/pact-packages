{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "attributePosition": "auto",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "ignore": [
      "old",
      "node_modules",
      "**/*.config.js",
      "**/*.config.cjs",
      "**/.eslintrc.cjs",
      ".next",
      "dist",
      "pnpm-lock.yaml",
      "*/.js",
      "*/.d.ts"
    ]
  },
  "organizeImports": { "enabled": true },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noForEach": "off",
        "noUselessFragments": "off",
        "noBannedTypes": "off"
      },
      "correctness": { "useExhaustiveDependencies": "off" },
      "style": {
        "useTemplate": "off",
        "useDefaultParameterLast": "off",
        "noUselessElse": "off"
      },
      "suspicious": { "noExplicitAny": "off" }
    },
    "ignore": [
      ".next/**",
      "**/node_modules",
      "**/.pnp",
      "**/.pnp.js",
      "**/coverage",
      "**/.next/",
      "**/out/",
      "**/next-env.d.ts",
      "**/.nitro/",
      "**/.output/**",
      "**/.expo/",
      "**/expo-env.d.ts",
      "apps/expo/.gitignore",
      "apps/expo/ios",
      "apps/expo/android",
      "**/build",
      "**/.DS_Store",
      "**/*.pem",
      "**/npm-debug.log*",
      "**/yarn-debug.log*",
      "**/yarn-error.log*",
      "**/.pnpm-debug.log*",
      "**/.env",
      "**/.env*.local",
      "**/.vercel",
      "**/dist/",
      "**/.cache",
      "**/.turbo",
      "**/*.config.js",
      "**/*.config.cjs",
      "**/.eslintrc.cjs",
      ".next",
      "dist",
      "pnpm-lock.yaml",
      "*/.js",
      "*/.d.ts",
      "dist/**"
    ]
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "all",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "quoteStyle": "single"
    },
    "globals": ["React"]
  },
  "overrides": [
    {
      "include": ["**/*.ts", "**/*.tsx"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedVariables": "warn"
          },
          "style": {
            "useImportType": "warn"
          },
          "suspicious": {
            "noAssignInExpressions": "off",
            "noDuplicateClassMembers": "off",
            "noDuplicateObjectKeys": "off",
            "noDuplicateParameters": "off",
            "noFunctionAssign": "off",
            "noImportAssign": "off",
            "noRedeclare": "off",
            "noUnsafeNegation": "off",
            "useGetterReturn": "off",

            "useAwait": "off",
            "useNamespaceKeyword": "error"
          },
          "a11y": {
            "useKeyWithClickEvents": "warn"
          }
        }
      },
      "javascript": {
        "globals": ["React"]
      }
    }
  ]
}
